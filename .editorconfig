root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 4
max_line_length = 140

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{html,css,js}]
indent_style = space
indent_size = 4

[*.{xml,json}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Dockerfile]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

