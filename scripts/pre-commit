#!/usr/bin/env bash
#
# Pre-commit hook for Smart Home Design Patterns project
# Blocks commits that break compilation or tests.
#
# Install: ./scripts/setup-hooks.sh
# Bypass (emergency only): git commit --no-verify
#

set -euo pipefail

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

log_info()    { echo -e "${BLUE}â„¹ï¸  $*${NC}"; }
log_success() { echo -e "${GREEN}âœ… $*${NC}"; }
log_warn()    { echo -e "${YELLOW}âš ï¸  $*${NC}"; }
log_error()   { echo -e "${RED}âŒ $*${NC}"; }

echo ""
echo -e "${YELLOW}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${YELLOW}  ğŸ”  Pre-Commit Quality Gate${NC}"
echo -e "${YELLOW}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo ""

# â”€â”€ 1. Merge conflict markers â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
log_info "Checking for merge conflict markers..."
CONFLICT_FILES=$(git diff --cached --name-only -z 2>/dev/null | xargs -0 grep -l '<<<<<<< \|======= \|>>>>>>> ' 2>/dev/null || true)
if [ -n "$CONFLICT_FILES" ]; then
    log_error "Merge conflict markers found in:"; echo "$CONFLICT_FILES"; exit 1
fi
log_success "No conflict markers"

# â”€â”€ 2. Debugging leftovers in Java â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
log_info "Checking for debugging leftovers..."
STAGED_JAVA=$(git diff --cached --name-only --diff-filter=ACM 2>/dev/null | grep '\.java$' || true)
if [ -n "$STAGED_JAVA" ]; then
    DEBUG_LINES=$(echo "$STAGED_JAVA" | xargs grep -n 'System\.out\.println\|System\.err\.println\|\.printStackTrace()' 2>/dev/null | grep -v '// ok' || true)
    if [ -n "$DEBUG_LINES" ]; then
        log_warn "System.out/err or printStackTrace() found â€” use SLF4J Logger:"; echo "$DEBUG_LINES"
    else
        log_success "No debug statements"
    fi
    TODO_LINES=$(echo "$STAGED_JAVA" | xargs grep -n 'TODO\|FIXME\|HACK\|XXX' 2>/dev/null | head -5 || true)
    [ -n "$TODO_LINES" ] && log_warn "TODO/FIXME/HACK reminders:$'\n'$TODO_LINES" || true
fi

# â”€â”€ 3. Trailing whitespace â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
log_info "Checking for trailing whitespace..."
WS=$(git diff --cached --check 2>/dev/null || true)
[ -n "$WS" ] && log_warn "Trailing whitespace (non-blocking): $(echo "$WS" | head -3)" || log_success "No trailing whitespace"

# â”€â”€ 4. Compile â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
log_info "Compiling project..."
if ! ./mvnw compile -q -B 2>/dev/null; then
    log_error "Compilation failed. Fix errors before committing."; exit 1
fi
log_success "Compilation passed"

# â”€â”€ 5. Tests â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
log_info "Running test suite..."
if ! ./mvnw test -q -B 2>/dev/null; then
    log_error "Tests failed. Fix failing tests before committing."; exit 1
fi
log_success "All tests passed"

echo ""
echo -e "${GREEN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${GREEN}  ğŸ‰  All gates passed â€” Committing!${NC}"
echo -e "${GREEN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo ""

